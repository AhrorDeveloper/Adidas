<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/image_background"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/provider_text_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:background="@drawable/ramka"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Tsod"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/provider_image_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ramka"
                    android:padding="6dp"
                    android:src="@drawable/ic_person" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/provider_text_phone_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+991554655"
                    android:gravity="center"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:textSize="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/ramka"/>
                <ImageView
                    android:id="@+id/provider_image_phone_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"
                    android:background="@drawable/ramka"
                    android:padding="6dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/provider_text_money_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/ramka"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:id="@+id/provider_image_money_item"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ramka"
                    android:padding="6dp"
                    android:src="@drawable/money" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/provider_text_address_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="@drawable/ramka"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:id="@+id/provider_image_address_item"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ramka"
                    android:padding="6dp"
                    android:src="@drawable/ic_location" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/provider_image_update_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:src="@drawable/ic_update"
                    android:padding="2dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ramka"
                    android:layout_marginStart="8dp"/>
                <ImageView
                    android:id="@+id/provider_image_edit_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:src="@drawable/ic_edit_"
                    android:background="@drawable/ramka"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="2dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>