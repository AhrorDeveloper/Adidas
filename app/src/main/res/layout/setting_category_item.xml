<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/image_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/category_name_setting_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:padding="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ramka"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/image_category_setting_item"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/ramka"
                android:padding="8dp"
                android:src="@drawable/category"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/category_percentage_setting_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="@integer/material_motion_duration_long_1"
                android:padding="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ramka"/>

            <ImageView
                android:id="@+id/image_percentage_setting_item"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/ic_percent"
                android:padding="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ramka"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/image_category_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_"
            android:padding="8dp"
            android:background="@drawable/ramka"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>